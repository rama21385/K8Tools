<UserControl Name="K8UC03"
             x:Class="K8_UC03analyse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:K8Tools"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             d:DesignHeight="550"
             d:DesignWidth="1000"
             mc:Ignorable="d"
             >

    <Grid Background="{StaticResource Xstrahl_SCB_Grey040}" Style="{StaticResource GRD_Margin00}">
        <Grid Style="{StaticResource GRD_Margin10}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                <Button x:Name="BTN03_EXITnosave"
                        Margin="0,0,20,10"
                        VerticalAlignment="Bottom"
                        Click="CloseMe"
                        Content="EXIT (no save)"
                        Style="{StaticResource STLButton61}"
                        />
                <Button x:Name="BTN03_SAVEsettings"
                        Margin="0,0,0,1"
                        VerticalAlignment="Bottom"
                        Click="SaveSettings"
                        Content="SAVE"
                        Style="{StaticResource STLButton61}"
                        />
                <!--  IsEnabled="{Binding ElementName=K8UC03, Path=ChangesMade}"  -->
            </StackPanel>
            <Grid Grid.Column="1" Style="{StaticResource GRD_Margin00}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ListBox Name="LSTBX03_Categories"
                         Width="305"
                         Height="111"
                         Margin="0,56,0,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         DisplayMemberPath="AnalyseCategoryName"
                         ItemsSource="{Binding}"
                         SelectionMode="Single"
                         />
                <TextBox x:Name="TXTBX03_CollectionName"
                         Width="100"
                         Height="23"
                         Margin="205,0,0,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text=""
                         TextWrapping="Wrap"
                         />

                <Button x:Name="BTN03_AddNewMeasValue"
                        Grid.Row="0"
                        Margin="205,28,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="AddNewMeasValue"
                        Content="ADD CATEGORY"
                        Style="{StaticResource STLButton53}"
                        />


                <ComboBox x:Name="CMBBX03_Category"
                          Grid.Row="0"
                          Width="200"
                          Margin="0,28,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          IsReadOnly="True"
                          ItemsSource="{Binding}"
                          SelectedValuePath="CategoryInternalID"
                          >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CategoryInternalID, Mode=OneWay}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:Name="CMBBX03_AnalysisCollection"
                          Grid.Row="0"
                          Width="200"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          IsReadOnly="True"
                          ItemsSource="{Binding}"
                          SelectedValuePath="AnalysisCollectionName"
                          SelectionChanged="LoadAndSortTheList"
                          >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AnalysisCollectionName, Mode=OneWay}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Grid Grid.Row="1" Style="{StaticResource GRD_Margin00}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Viewbox Name="VWBX03"
                             Grid.Column="1"
                             MaxWidth="1000"
                             Margin="0,00,0,0"
                             HorizontalAlignment="Right"
                             Stretch="Uniform"
                             >

                        <Canvas Name="CNVS03_Chart"
                                Width="576"
                                Height="400"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="WhiteSmoke"
                                />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
